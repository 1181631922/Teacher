<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="20dp" >

        <Button
            android:id="@+id/bg_btn"
            android:layout_width="50dp"
            android:layout_height="300dp"
            android:background="@drawable/zhutiao" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_gravity="center" >

            <Button
                android:id="@+id/values_btn"
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:layout_alignParentBottom="true"
                android:background="#00FFFF" />

            <TextView
                android:id="@+id/textview_values"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/values_btn"
                android:gravity="center"
                android:text="45%"
                android:textColor="#FFF"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/let_line"
                android:layout_width="65dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:background="#0000ff" />

            <ImageView
                android:id="@+id/point_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/let_line"
                android:background="@drawable/bluepoint_img" />

            <TextView
                android:id="@+id/right_line"
                android:layout_width="65dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/point_img"
                android:background="#0000ff" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="我的科目"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>